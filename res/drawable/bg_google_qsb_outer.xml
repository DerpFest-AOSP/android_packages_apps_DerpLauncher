<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer pill-shaped container with 70% opacity -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/qsb_widget_height" />
            <solid android:color="@color/qsb_outer_color" />
        </shape>
    </item>
    
    <!-- Inner container (existing search bar) -->
    <item
        android:bottom="8dp"
        android:top="8dp"
        android:left="8dp"
        android:right="54dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/qsb_widget_height" />
            <solid android:color="?qsbFillColor" />
        </shape>
    </item>
</layer-list>
